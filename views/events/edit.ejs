<%- include('../partials/header.ejs')%>

    <main>
        <h1>Edit Event</h1>
        <form action="/events/<%= event._id %>?_method=PUT" enctype="multipart/form-data" method="POST"
            class="event-form">

            <label for="category">Category:</label>
            <select id="category" name="category">
                <option value="Workshop" <%=event.category==='Workshop' ? 'selected' : '' %>>Workshop</option>
                <option value="Networking" <%=event.category==='Networking' ? 'selected' : '' %>>Networking</option>
                <option value="Seminar" <%=event.category==='Seminar' ? 'selected' : '' %>>Seminar</option>
                <option value="Webinar" <%=event.category==='Webinar' ? 'selected' : '' %>>Webinar</option>
                <option value="Other" <%=event.category==='Other' ? 'selected' : '' %>>Other</option>
            </select>

            <label for="title">Event Title:</label>
            <input type="text" id="title" name="title" value="<%= event.title %>" required>

            <label for="start">Start Date/Time:</label>
            <input type="datetime-local" id="start" name="start"
                value="<%= new Date(event.start).toISOString().slice(0, 16) %>" required>

            <label for="end">End Date/Time:</label>
            <input type="datetime-local" id="end" name="end"
                value="<%= new Date(event.end).toISOString().slice(0, 16) %>" required>

            <label for="location">Location:</label>
            <input type="text" id="location" name="location" value="<%= event.location %>" required>

            <label for="details">Details:</label>
            <textarea id="details" name="details" rows="4" required minlength="10"><%= event.details %></textarea>

            <label for="image">Event Image:</label>
            <input type="file" id="image" name="image" accept="image/*">

            <button type="submit">Update Event</button>
        </form>

    </main>

    <%- include('../partials/footer.ejs')%>